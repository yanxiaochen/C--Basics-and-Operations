#include<iostream>
using namespace std;
class CalculateFun
{
public:
	CalculateFun();
	void AllByOne();
	static void ShowSequence();
private:
	void InsideCalculation();
	void SetData();
	int x; int y;
	static int snCount;
};


int CalculateFun::snCount(0);

CalculateFun::CalculateFun()
{
	x = 0, y = 0;
}
void CalculateFun::SetData()
{
	cout << "请输入两个整数，计算(x + 2) * (y + 3)" << endl;
	cin >> x >> y;
}
void CalculateFun::InsideCalculation()
{
	cout << "结果=" << (x + 2) * (y + 3) << endl;
}

void CalculateFun::AllByOne()
{
	SetData();
	InsideCalculation();
}
void CalculateFun::ShowSequence()
{
	snCount++;
	cout << "调动次数为：" <<  snCount << endl;
};



void ObjectOperating(CalculateFun* pC)
{
	pC->AllByOne();
	pC->ShowSequence();
}
int main()
{
	
	CalculateFun* pArr = new CalculateFun[3]();
	/*CalculateFun* pArr[] = {
	new CalculateFun(),
	new CalculateFun(),
	new CalculateFun(), };*/
	for (int i = 0; i < 3; i++)
	{
		ObjectOperating(pArr + i);
	}
	delete[]pArr;
	pArr = NULL;
	return 0;
}
