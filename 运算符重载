#include<iostream>
#include<iomanip>
using namespace std;
class Rectangle
{
public:
	Rectangle();
	friend Rectangle operator+(Rectangle&, Rectangle&);
	friend  istream& operator>> (istream&, Rectangle&);
	friend  ostream& operator<< (ostream&, Rectangle&);

private:
	double length;
	double width;
};



Rectangle::Rectangle():length(0), width(0)
{

}
Rectangle operator+(Rectangle& a, Rectangle& b)
{
	Rectangle c;
	c.length = a.length + b.length;
	c.width = a.width + b.width;
	return c;
}
istream& operator>> (istream& in, Rectangle& c)
{
	cout << "请输入长方形的长和宽" << endl;
	in >> c.length >> c.width;
	return in;
}
ostream& operator<< (ostream& out, Rectangle& c)
{
	cout << "长方形的长和，宽和为";
	out << c.length <<"  "<< c.width;
	cout << endl;
	cout << "长方体的面积为:";
	out << c.length * c.width;
	return out;
}


int main()
{
	Rectangle  r1, r2, r3;
	cin >> r1;
	cin >> r2;
	r3 = r1 + r2;
	cout<< r3 << endl;
	return 0;
}
